@model ToDoList
@{
    ViewData["Title"] = "UpdateToDoList";
    Layout = "~/Views/Layout/Index.cshtml";
}



<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Deneyimler</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Deneyim Güncelleme Sayfası</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Deneyimler ile ilgili güncelleme işlemlerini aşağıdaki panelden yapabilirsiniz.
						</div>
						<form method="post">
							<input type="hidden" asp-for="ToDoListId" />
							<label>Başlık & İçerik</label>
							<input type="text" placeholder="İçeriği yazınız" asp-for="Title" class="form-control" />
							<br />
							<label>Tarih</label>
							<input type="date" asp-for="Date" placeholder="Tarih seçiniz" class="form-control" />
							<br />

							<label>Tarih Aralığı</label>
							<input type="text" asp-for="ImageUrl" placeholder="Görsel Yolu " class="form-control" />
							<br />
							
							<button class="btn btn-success">Yapılacak İşi Güncelle</button>
							<td><a href="/ToDoList/CancelUpdateToDoList/" class="btn btn-dark">Güncelleme İşlemini İptal Et</a></td>

						</form>

					</div>
				</div>


			</div>
		</div>

	</div>




